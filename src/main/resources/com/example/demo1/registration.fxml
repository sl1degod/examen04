<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="700.0" stylesheets="@../../../styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.controllers.Registration">
   <children>
      <Label layoutX="275.0" layoutY="14.0" text="Регистрация">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font></Label>
      <Button fx:id="reg" layoutX="256.0" layoutY="424.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="195.0" text="Зарегистрироваться" textAlignment="CENTER" />
      <Label fx:id="error" alignment="CENTER" contentDisplay="CENTER" layoutX="255.0" layoutY="380.0" prefHeight="36.0" prefWidth="195.0" textAlignment="CENTER" textFill="RED" wrapText="true" />
      <VBox layoutX="262.0" layoutY="72.0" prefHeight="302.0" prefWidth="177.0" spacing="20.0">
         <children>
            <TextField fx:id="firstName" prefHeight="33.0" prefWidth="164.0" promptText="Введите имя">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="secondName" prefHeight="33.0" prefWidth="164.0" promptText="Введите фамилию">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="lastName" prefHeight="33.0" prefWidth="164.0" promptText="Введите отчество">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="email" prefHeight="33.0" prefWidth="164.0" promptText="Введите почту">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="login" prefHeight="33.0" prefWidth="164.0" promptText="Введите логин">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <PasswordField fx:id="password" prefHeight="33.0" prefWidth="164.0" promptText="Введите пароль">
               <font>
                  <Font size="15.0" />
               </font>
            </PasswordField>
         </children>
      </VBox>
   </children>
</AnchorPane>
